<!DOCTYPE html>
<html lang="it">
<head>
    <style>
table, th, td {
border: 1px solid black;
border-collapse: collapse;
}
</style>
</head>
<body>

<h2>Inserisci Dati</h2>
<form id="dataForm">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" required><br><br>

    <label for="cognome">Cognome:</label>
    <input type="text" id="cognome" required><br><br>

    <label for="indirizzo">Indirizzo:</label>
    <input type="text" id="indirizzo" required><br><br>

    <label for="città">Città:</label>
    <input type="text" id="città" required><br><br>

    <button type="button" onclick="aggiungiDati()">Aggiungi Dati</button>
</form>

<table id="datiTable">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Cognome</th>
        <th>Indirizzo</th>
        <th>Città</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
        const dati = [];

        function aggiungiDati() {
            const nome = document.getElementById('nome').value;
            const cognome = document.getElementById('cognome').value;
            const indirizzo = document.getElementById('indirizzo').value;
            const città = document.getElementById('città').value;


            dati.push([nome, cognome, indirizzo, città]);


            document.getElementById('dataForm').reset();


            aggiornaTabella();
        }

        function aggiornaTabella() {
            const tbody = document.getElementById('datiTable').getElementsByTagName('tbody')[0];
            tbody.innerHTML = '';

            dati.forEach((elemento) => {
                const row = tbody.insertRow();
                elemento.forEach((campo) => {
                    const cell = row.insertCell();
                    cell.textContent = campo;
                });
            });
        }
    </script>

</body>
</html>
